modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["rapidfuzz-cpp", "taskflow"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Quiz Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "discord_bot_workflow"

[[workflows.workflow]]
name = "Discord Quiz Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install discord.py python-dotenv aiohttp rapidfuzz pillow && cp .env.example .env && python main.py"

[[workflows.workflow]]
name = "discord_bot_workflow"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install discord.py python-dotenv rapidfuzz pillow aiohttp && python main.py"
